<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Parking</th>
      <th>Bedroom</th>
      <th>Toilet</th>
      <th>Floor</th>
      <th>Buildsize</th>
      <th>Landsize</th>
      <th>Locations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.title %></td>
        <td><%= property.price %></td>
        <td><%= property.parking %></td>
        <td><%= property.bedroom %></td>
        <td><%= property.toilet %></td>
        <td><%= property.floor %></td>
        <td><%= property.buildsize %></td>
        <td><%= property.landsize %></td>
        <td><%= property.locations %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

